<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outputView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="89dp"
        android:textSize="@dimen/abc_text_size_large_material" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="kr.ac.kaist.jinhwan.fluentkeyboard.InputFieldView"
        android:id="@+id/inputFieldView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <SeekBar
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lastInputTV"
        android:layout_toEndOf="@+id/lastInputTV" />

    <SeekBar
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:layout_below="@+id/seekBar1"
        android:layout_alignLeft="@+id/seekBar1"
        android:layout_alignStart="@+id/seekBar1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lastInputR"
        android:id="@+id/lastInputTV"
        android:layout_above="@+id/seekBar2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="minFlickR"
        android:id="@+id/minFlickTV"
        android:layout_alignTop="@+id/seekBar2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rawTV"
        android:layout_below="@+id/outputView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="rawTV"
        android:textSize="25dp" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/convertedTV"
        android:layout_below="@+id/rawTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/capture"
        android:scaleType="fitCenter"
        android:layout_below="@+id/convertedTV"
        android:layout_toRightOf="@+id/outputView"
        android:layout_toEndOf="@+id/outputView" />

    <view
        android:layout_width="100dp"
        android:layout_height="100dp"
        class="kr.ac.kaist.jinhwan.fluentkeyboard.RingUIView"
        android:id="@+id/ringUIView"
        android:background="@drawable/ring_ui_design"
        android:layout_below="@+id/convertedTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp" />

</RelativeLayout>
